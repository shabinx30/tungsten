    <script>
        const ctx = document.getElementById('myChart').getContext('2d');
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        // [ { totalIncome: 3196, month: 8, monthName: 'August' } ]

        function monthlySales(){

            axios.get('/admin/monthlySales')
        .then((Response)=>{
            console.log(Response.data)

            new Chart(ctx, {
            type: 'bar', // Set the default chart type
            data: {
                labels: Response.data.orderMonth.map(row=> row.monthName),
                datasets: [{
                    label: 'Revenue',
                    data: Response.data.orderMonth.map(row=> row.totalIncome),
                    borderColor: 'rgb(255, 124, 124)',
                    backgroundColor: [
                        'rgba(107, 66, 255, 0.5)'
                    ],
                    // tension: .5
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
            });
        })
        .catch((error)=>{
            console.log(error)
        })
        }

        function yearlySales(){
            axios.get('/admin/yearlySales')
        .then((Response)=>{
            console.log(Response.data)

            new Chart(ctx, {
            type: 'bar', // Set the default chart type
            data: {
                labels: Response.data.orderYear.map(row=> row._id.year),
                datasets: [{
                    label: 'Revenue',
                    data: Response.data.orderYear.map(row=> row.totalIncome),
                    borderColor: ['rgb(255, 124, 124)'],
                    backgroundColor: [
                        'rgba(107, 66, 255, 0.5)'
                    ],
                    // tension: .5
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
            });
        })
        .catch((error)=>{
            console.log(error)
        })
        }

        window.onload = function() {
            monthlySales();
        };

        
    </script>

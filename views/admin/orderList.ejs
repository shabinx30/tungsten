<style>
  .purple-header-box {
    background-color: #936dd1; /* Purple color */
    color: #ffffff; /* White text color */
    padding: 15px; /* Adjust padding as needed */
    border-radius: 5px; /* Optional: Add rounded corners */
    margin-bottom: 20px; /* Optional: Add space below the box */
    text-align: center;
  }
  .search-bar {
    margin-bottom: 10px; /* Adjust spacing between search bar and heading */
  }
  .purple-button {
    background-color: #936dd1;
    color: white; /* text color */
    border: 1px solid #00000000; /* black border */
    border-radius: 10px; /* slight curve */
    padding: 10px 20px; /* adjust padding as needed */
    font-size: 16px; /* adjust font size as needed */
    cursor: pointer; /* cursor style */
    /* You can add additional styling as needed */
  }
  .search-btn {
    width: 100px; /* Adjust the width of the button as needed */
    height: 40px; /* Adjust the height of the button as needed */
    border: 2px solid #000; /* Black border */
    border-radius: 2px; /* Make it round */
    background-color: #936dd1; /* Black background */
    color: #050404; /* White text color */
    font-size: 14px; /* Adjust font size */
    padding: 0; /* Remove padding */
  }

  .search-btn::after {
    display: inline-block;
    margin-left: 0.3rem; /* Adjust spacing between button and text */
  }
  .search-bar {
    width: calc(100% - 80px); /* Adjust the width of the search bar */
    margin-right: 10px; /* Adjust spacing between search bar and button */
  }
  .custom-table-header {
    background-color: grey;
    color: black;
    width: 100%;
  }
  .red-button {
    color: #9f0000;
    background-color: #ff9797;
    border-radius: 10px;
  }
  .red-button:hover {
    color: #9f0000;
    background-color: #ff6969;
  }
  .green-button {
    color: #009f18;
    background-color: #a2ff97;
    border-radius: 10px;
  }
  .green-button:hover {
    color: #009f18;
    background-color: #68ff58;
  }
  .delete-button {
    color: #ff0000;
    background-color: #525252;
    border-radius: 10px;
  }
  .delete-button:hover {
    color: #ff0000;
    background-color: #000;
  }
  .edit-button {
    color: blue;
    background-color: #a1a1ff;
    border-radius: 10px;
  }
  .edit-button:hover {
    color: blue;
    background-color: #7b7bff;
  }
</style>

<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div class="" style="width: 100%">
              <!-- Added div with custom class -->
              <h2 class="card-title text-center mb-3">ORDER HISTORY</h2>
            </div>
            <% if (locals.success) { %>
            <div
              class="alert text-center"
              role="alert"
              style="color: green; background: white"
            >
              <%= locals.success %>
            </div>
            <% } %>

            <div class="table-responsive" style="border-radius: 20px">
              <table class="table">
                <thead>
                  <tr style="width: 100%; background-color: #936dd1; color: #000">
                    <th scope="col">NO.</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Total</th>
                    <th scope="col">Payment method</th>
                    <th scope="col">More Options</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (orders.length > 0) { %>
                    <% orders.forEach((value, index) => { %>
                      <tr>
                        <td><%= ++index %></td>
                        <td><%= value.userName %></td>
                        <td><%= value.purchasedDate %></td>
                        <td>â‚¹<%= value.subTotal %></td>
                        <td><%= value.paymentMethod %></td>
                        <td>
                          <a style="cursor: pointer;" data-toggle="modal" data-target="#modal-<%= index %>">
                            <span class="btn ml-3 edit-button">View</span>
                          </a>
                        </td>
                        <!-- Modal -->
                        <div class="modal fade" id="modal-<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content p-4" style="border-radius: 20px;">
                              <div class="modal-header">
                                <h2 class="modal-title" id="exampleModalLongTitle" style="color: #000;">Order Details</h2>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body pl-3 pr-3">
                                <% value.orderedProducts.forEach(product => { %>
                                  <div class="row">
                                    <img class="mb-2" src="/productImages/<%= product.productId.images[0] %>" alt="no image" style="width: 50px; height: 50px; border-radius: 5px; border: 1px solid black;">
                                    <div class="d-block ml-3">
                                      <p><strong style="color: black;">Name: </strong><%= product.productId.name %> <br>
                                        <strong style="color: black;">Price: </strong><%= product.productId.price %> <br>
                                        <strong style="color: black;">Quantity: </strong><%= product.quantity %> <strong class="ml-4" style="color: #000;">Status:</strong>
                                        <select class="btn" id="<%= product.productId %>" style="background-color: #7b7bff; border-radius: 10px; color: #000;" onchange="ProductStatus(event,'<%= product._id %>')">
                                          <% if (product.status == 'placed') { %>
                                            <option value="placed" hidden>Placed</option>
                                            <option value="shipped">Shipped</option>
                                            <option value="delivered">Delivered</option>
                                            <option value="cancelled">Cancelled</option>
                                          <% } else if (product.status == 'shipped') { %>
                                            <option value="shipped" hidden>Shipped</option>
                                            <option value="placed">Placed</option>
                                            <option value="delivered">Delivered</option>
                                            <option value="cancelled">Cancelled</option>
                                          <% } else if (product.status == 'delivered') { %>
                                            <option value="delivered" hidden>Delivered</option>
                                            <!-- <option value="placed">Placed</option>
                                            <option value="shipped">Shipped</option>
                                            <option value="cancelled">Cancelled</option> -->
                                          <% } else if (product.status == 'cancelled') { %>
                                            <option value="cancelled" hidden>Cancelled</option>
                                            <option value="placed">Placed</option>
                                            <option value="shipped">Shipped</option>
                                            <option value="delivered">Delivered</option>
                                          <% } %>
                                        </select>                                        
                                      </p>
                                    </div>
                                  </div>
                                <% }) %>
                                <h3 class="mt-3" style="color: #000;">Address</h3>
                                <p><strong style="color: #000;">First name: </strong><%= value.shipAddress[0].first_name %> <strong style="color: #000;">Last name: </strong><%= value.shipAddress[0].last_name %> <br>
                                  <strong style="color: #000;">Country: </strong><%= value.shipAddress[0].contry %> <strong style="color: #000;">Street name: </strong><%= value.shipAddress[0].street_name %> <br>
                                  <strong style="color: #000;">Town: </strong><%= value.shipAddress[0].town %> <strong style="color: #000;">State: </strong><%= value.shipAddress[0].state %> <br>
                                  <strong style="color: #000;">Postcode: </strong><%= value.shipAddress[0].postcode %> <strong style="color: #000;">Phone number: </strong><%= value.shipAddress[0].phone_number %> <br>
                                  <strong style="color: #000;">Email: </strong><%= value.shipAddress[0].email %> 
                                </p>
                                <p class="mt-4"><strong style="color: #000;">Order Date: </strong><%= value.purchasedDate %></p>
                              </div>
                              <div class="modal-footer mx-auto">
                                <button type="button" class="btn btn-primary" data-dismiss="modal" style="border-radius: 10px;">
                                  <span>Close</span>
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="6">No orders found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            
              <% if (locals.errmsg) { %>
                <div class="alert text-center" role="alert" style="color: blueviolet; background: white">
                  <%= locals.errmsg %>
                </div>
              <% } %>
            </div>
            
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
  </div>
</div>

<script>
  function confirmAction(categoryId) {
    let categoryBtn = document.getElementById(`status-button-${categoryId}`);
    console.log(categoryBtn);

    fetch(`/admin/categoryStatus?categoryId=${categoryId}`, {
      method: "GET",
    })
      .then((response) => {
        if (!response.ok) {
          throw new Error("Network response was not ok");
        }
        return response.json();
      })
      .then((data) => {
        console.log("Response is working:", data.is_listed);

        if (data.is_listed == false) {
          console.log("heyyyyy");
          categoryBtn.innerText = "Unlist";
          categoryBtn.className = "btn ml-3 red-button";
          categoryBtn.style.backgroundColor = "#ff9797";
          categoryBtn.style.color = "#9f0000";
        } else {
          console.log("haaaaaiiiiiii");
          categoryBtn.innerText = "List";
          categoryBtn.className = "btn ml-3 green-button";
          categoryBtn.style.backgroundColor = "#a2ff97";
          categoryBtn.style.color = "#009f18";
        }
      })
      .catch((error) => {
        console.error("There was a problem with the fetch operation:", error);
      });
  }
</script>



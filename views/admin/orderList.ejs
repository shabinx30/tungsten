<script>
  function ProductStatus(event,productId){
    console.log(event.target.value);
    axios.post('/admin/productStatus', {
      status: event.target.value,
      productId
    })
    .then(response => {
      window.location.reload()
    })
    .catch(error => {
      console.error('Error posting data:', error);
    });
  }
</script>


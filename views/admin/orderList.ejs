<%-include('../layouts/adminHeader.ejs')%>
<%-include('../layouts/adminSidebar.ejs')%>

<style>
  .purple-header-box {
    background-color: #936dd1; /* Purple color */
    color: #ffffff; /* White text color */
    padding: 15px; /* Adjust padding as needed */
    border-radius: 5px; /* Optional: Add rounded corners */
    margin-bottom: 20px; /* Optional: Add space below the box */
    text-align: center;
  }
  .search-bar {
    margin-bottom: 10px; /* Adjust spacing between search bar and heading */
  }
  .purple-button {
    background-color: #936dd1;
    color: white; /* text color */
    border: 1px solid #00000000; /* black border */
    border-radius: 10px; /* slight curve */
    padding: 10px 20px; /* adjust padding as needed */
    font-size: 16px; /* adjust font size as needed */
    cursor: pointer; /* cursor style */
    /* You can add additional styling as needed */
  }
  .search-btn {
    width: 100px; /* Adjust the width of the button as needed */
    height: 40px; /* Adjust the height of the button as needed */
    border: 2px solid #000; /* Black border */
    border-radius: 2px; /* Make it round */
    background-color: #936dd1; /* Black background */
    color: #050404; /* White text color */
    font-size: 14px; /* Adjust font size */
    padding: 0; /* Remove padding */
  }

  .search-btn::after {
    display: inline-block;
    margin-left: 0.3rem; /* Adjust spacing between button and text */
  }
  .search-bar {
    width: calc(100% - 80px); /* Adjust the width of the search bar */
    margin-right: 10px; /* Adjust spacing between search bar and button */
  }
  .custom-table-header {
    background-color: grey;
    color: black;
    width: 100%;
  }
  .red-button {
    color: #9f0000;
    background-color: #ff9797;
    border-radius: 10px;
  }
  .red-button:hover {
    color: #9f0000;
    background-color: #ff6969;
  }
  .green-button {
    color: #009f18;
    background-color: #a2ff97;
    border-radius: 10px;
  }
  .green-button:hover {
    color: #009f18;
    background-color: #68ff58;
  }
  .delete-button {
    color: #ff0000;
    background-color: #525252;
    border-radius: 10px;
  }
  .delete-button:hover {
    color: #ff0000;
    background-color: #000;
  }
  .edit-button {
    color: blue;
    background-color: #a1a1ff;
    border-radius: 10px;
  }
  .edit-button:hover {
    color: blue;
    background-color: #7b7bff;
  }
</style>

<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div class="" style="width: 100%">
              <!-- Added div with custom class -->
              <h2 class="card-title text-center mb-3">ORDER HISTORY</h2>
            </div>
            <% if (locals.success) { %>
            <div
              class="alert text-center"
              role="alert"
              style="color: green; background: white"
            >
              <%= locals.success %>
            </div>
            <% } %>

            <div class="table-responsive" style="border-radius: 20px">
              <table class="table">
                <thead>
                  <tr style="width: 100%; background-color: #936dd1; color: #000">
                    <th scope="col">NO.</th>
                    <th scope="col">Product Image</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Status</th>
                    <th scope="col">Changes</th>
                    <th scope="col">More Options</th>
                  </tr>
                </thead>
                <tbody>
                  <% let index = 1 %>
                  <% if (orders.length > 0) { %>
                    <% orders.forEach((order, orderIndex) => { %>
                      <% order.orderedProducts.forEach((product, productIndex) => { %>
                        <% const modalId = `exampleModalCenter-${orderIndex}-${productIndex}` %>
                        <tr>
                          <td><%= index++ %></td>
                          <td>
                            <img class="ml-4 mr-4" src="/productImages/<%= product.productId.images[0] %>" alt="no" style="width: 45px; border-radius: 10px; border: 1px solid #000;">
                          </td>
                          <td><%= product.productId.name %></td>
                          <td><%= order.userName %></td>
                          <td><span class="p-2" style="background-color: #353535; color: #ff6868; border-radius: 10px;"><%= product.status %></span></td>
                          <td>
                            <select style="background-color: #c1c1ff; border-radius: 10px;" name="" id="" class="p-1">
                              <option value="">Shipped</option>
                              <option value="">Delivered</option>
                              <option value="">Cancelled</option>
                            </select>
                          </td>
                          <td>
                            <button style="background-color: #bfffea; color: #009d6e; border: none; border-radius: 10px;" data-toggle="modal" data-target="#<%= modalId %>">View</button>
                          </td>
              
                          <!-- Modal -->
                          <div class="modal fade" id="<%= modalId %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                              <div class="modal-content p-4" style="border-radius: 20px;">
                                <div class="modal-header">
                                  <h3 class="modal-title" id="exampleModalLongTitle" style="color: #000;"><strong>Product Details</strong></h3>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body pl-3 pr-3">
                                  <p class="text-danger" id="addressmsg"><%= locals.addressmsg %></p>
                                  <div class="row">
                                    <img src="/productImages/<%= product.productId.images[0] %>" alt="no" style="width: 80px; height: 80px; border-radius: 10px;">
                                    <div>
                                      <p class="pl-3">
                                        <span style="color: #000;">Product Name:</span> <%= product.productId.name %><br>
                                        <span style="color: #000;">Quantity:</span> <%= product.quantity %><br>
                                        <span style="color: #000;">Total Price:</span> <span class="text-success">â‚¹<%= product.totalPrice %></span>
                                      </p>
                                    </div>
                                  </div>
                                  <h4 style="color: #000; margin-top: 1em;"><strong>Address</strong></h4>
                                  <div>
                                    <% order.shipAddress.forEach((address) => { %>
                                      <p>
                                        <span style="color: #000;">First name:</span> <%= address.first_name %> <span style="color: #000;">Last name:</span> <%= address.last_name %><br>
                                        <span style="color: #000;">Country:</span><%= address.contry %><br>
                                        <span style="color: #000;">Street name:</span> <%= address.street_name %><br>
                                        <span style="color: #000;">Town:</span> <%= address.town %> <span style="color: #000;">State:</span> <%= address.state %><br>
                                        <span style="color: #000;">Postcode:</span> <%= address.postcode %><br>
                                        <span style="color: #000;">Phone number:</span> <%= address.phone_number %><br>
                                        <span style="color: #000;">Email:</span> <%= address.email %><br>
                                      </p>
                                    <% }) %>
                                  </div>
                                </div>
                                <div class="modal-footer mx-auto">
                                  <button type="button" class="btn btn-primary" data-dismiss="modal" style="border-radius: 10px; height: 2.9em;">
                                    <span>Close</span>
                                  </button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </tr>
                      <% }) %>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="6">No orders found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
              

              

              <% if (locals.errmsg) { %>
              <div
                class="alert text-center"
                role="alert"
                style="color: blueviolet; background: white"
              >
                <%= locals.errmsg %>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
  </div>
</div>

<script>
  function confirmAction(categoryId) {
    let categoryBtn = document.getElementById(`status-button-${categoryId}`);
    console.log(categoryBtn);

    fetch(`/admin/categoryStatus?categoryId=${categoryId}`, {
      method: "GET",
    })
      .then((response) => {
        if (!response.ok) {
          throw new Error("Network response was not ok");
        }
        return response.json();
      })
      .then((data) => {
        console.log("Response is working:", data.is_listed);

        if (data.is_listed == false) {
          console.log("heyyyyy");
          categoryBtn.innerText = "Unlist";
          categoryBtn.className = "btn ml-3 red-button";
          categoryBtn.style.backgroundColor = "#ff9797";
          categoryBtn.style.color = "#9f0000";
        } else {
          console.log("haaaaaiiiiiii");
          categoryBtn.innerText = "List";
          categoryBtn.className = "btn ml-3 green-button";
          categoryBtn.style.backgroundColor = "#a2ff97";
          categoryBtn.style.color = "#009f18";
        }
      })
      .catch((error) => {
        console.error("There was a problem with the fetch operation:", error);
      });
  }
</script>


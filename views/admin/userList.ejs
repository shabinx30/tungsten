<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid" >
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row" >
            <div class="col-12" >
                <div class="card" style="background-color: #ffffff;">
                    <div class="card-body">
                           
                        <div class="" style="width: 100%;"> <!-- Added div with custom class -->
                             
                            <h2 class="card-title text-center mt-2 mb-5" >Customer Informations</h2>
                        </div>
                        <div class="table-responsive w-75 mx-auto" style="border-radius: 20px;">
                            <table class="table table-hover ">
                                <thead class="custom-table-header">
                                    <tr style="background-color: #936dd1; color: #000; width: 100%;">
                                        <th scope="col">Users</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Phone Number</th>
                                        <th scope="col" class="text-center">Status</th>                                              
                                    </tr>
                                </thead>
                                
                                
                                <tbody>
                                    
                                    <% if (users.length > 0) {
      
                                        for(i=0;i<users.length;i++){
                             
                                        %>
                             
                                        <tr >
                                            <td class="px-3"><%= users[i].name %></td>
                                            <td class="px-3"><%= users[i].email %></td>
                                            <td class="px-3"><%= users[i].phone_number %></td>
                                            <td class="px-5 text-center">

                                            <% if (users[i].is_blocked==true) { %>
                                                <button id="status-button-<%= users[i]._id %>" onclick="confirmAction('<%= users[i]._id %>')" class="btn red-button">Unblock</button>                    
                                            <% } else { %>
                                                <button id="status-button-<%= users[i]._id %>" onclick="confirmAction('<%= users[i]._id %>')" class="btn green-button">Block</button>
                                            <% } %>
                                            </td>
                                        </tr>
                                        
                                        <%
                             
                                        }
                             
                                 } else {
                                    %>
                                     <tr>
                             
                                         <td colspan="3"> user not found</td>
                             
                                        </tr>
                                    <%
                                 
                                 }%>
                       
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>
</div >

<script>
        function confirmAction(user_Id) {
            console.log('function');
            let userBtn = document.getElementById(`status-button-${user_Id}`);

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, change status!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/blockUser?userId=${user_Id}`, {
                        method: "GET"
                    })
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error("Network response was not ok");
                        }
                        return response.json();
                    })
                    .then((data) => {
                        console.log("Response is working:", data.is_blocked);

                        if(data.is_blocked == false){
                            console.log("heyyyyy");
                            userBtn.innerText = "Unblock";
                            userBtn.className = "btn ml-3 red-button";
                        } else {
                            console.log("haaaaaiiiiiii");
                            userBtn.innerText = "Block";
                            userBtn.className = "btn ml-3 green-button";
                        }
                    })
                    .catch((error) => {
                        console.error("There was a problem with the fetch operation:", error);
                        Swal.fire(
                            'Error!',
                            'There was a problem changing the user status.',
                            'error'
                        );
                    });
                }
            });
        }
</script>

    

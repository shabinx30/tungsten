                      </a>


                      <% if(coupon.is_activated==true) { %>
                        <button id="status-button-<%= coupon._id %>" onclick="confirmAction('<%= coupon._id %>')" class="btn ml-3 red-button">Deactivate</button>
                      <%} else { %>

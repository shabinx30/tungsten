                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: response.data.error || 'There is a problem!',
                        timer: 3000,
                        showConfirmButton: false
                    });
                }
            }
        })
        .catch((error) => {
            console.log(error);

            // Show error message
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: 'There was an error processing your request.',
                timer: 3000,

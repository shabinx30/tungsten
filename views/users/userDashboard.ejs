    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">My Account</h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->
        <nav aria-label="breadcrumb" class="breadcrumb-nav mb-3">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">My Account</li>
                </ol>
            </div><!-- End .container -->
        </nav><!-- End .breadcrumb-nav -->
        
        <div class="page-content">
            <div class="dashboard">
                <div class="container">
                    <div class="row">
                        <aside class="col-md-4 col-lg-3">
                            <ul class="nav nav-dashboard flex-column mb-3 mb-md-0" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="tab-dashboard-link" data-toggle="tab" href="#tab-dashboard" role="tab" aria-controls="tab-dashboard" aria-selected="true"><strong>Dashboard</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-orders-link" data-toggle="tab" href="#tab-orders" role="tab" aria-controls="tab-orders" aria-selected="false"><strong>Orders</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-downloads-link" data-toggle="tab" href="#tab-downloads" role="tab" aria-controls="tab-downloads" aria-selected="false"><strong>Wallet</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="tab-address-link" data-toggle="tab" href="#tab-address" role="tab" aria-controls="tab-address" aria-selected="false"><strong>Addresses</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" onclick="signOut()" style="cursor: pointer;"><strong style="color: #ff7979;">Sign Out</strong></a>
                                    <script>
                                        function signOut(){
                                            Swal.fire({
                                                title: 'Are you sure?',
                                                text: "Are you sure to logout?",
                                                icon: 'question',
                                                showCancelButton: true,
                                                confirmButtonColor: '#ff7979',
                                                cancelButtonColor: '#1ca0ff',
                                                confirmButtonText: 'Yes,i am!',
                                                cancelButtonText: 'No!'
                                            }).then((result) => {
                                                if (result.isConfirmed) {
                                                    window.location.href = '/logout'
                                                }
                                            })
                                        }
                                    </script>
                                </li>
                            </ul>
                        </aside><!-- End .col-lg-3 -->

                        <div class="col-md-8 col-lg-9">
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="tab-dashboard" role="tabpanel" aria-labelledby="tab-dashboard-link">
                                    <h5 style="color: black;">Hello, <%= user.name %></h5>
                                    <p><b>Email : </b><%= user.email %></p>
                                    <% if(user.phone_number){ %>
                                        <p><b>Phone no : </b><%= user.phone_number %></p>
                                    <% } %>
                                    <% if(!user.picture){ %>
                                        <a href="/changePassword" style="display: block;" class="forgot-link">Change Your Password?</a>
                                        <a href="/editProfile" class="btn btn-outline-primary-2 mt-3" style="border-radius: 10px;"><span>Edit Profile</span><i class="icon-long-arrow-right"></i></a>
                                    <% } %>
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade " id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
                                    <p id="orderOp" hidden><%= locals.orderOp %></p>
                                    <% if(orders.length>0){ %>  
                                        <% orders.forEach((order,index)=>{ %>
                                            <div class="mb-3 p-4 shadow-lg " style="border: 1px solid #ff8f67; border-radius: 10px;">
                                            <% order.orderedProducts.forEach((product,index)=>{ %>
                                                <div class="d-flex w-100 <%=product.status=='cancelled'?'product-media':''%>" style="margin-bottom: 10px; border: 1px solid #c2c2c2; padding: 1em; border-radius: 10px;">
                                                    <% if(product.status!='cancelled'){ %>
                                                        <img class="text-left" src="/productImages/<%= product.productId.images[0] %>" alt="image" style="width: 50px; height: 50px;">
                                                    <%}else{%>
                                                        <img class="text-left" src="/productImages/<%= product.productId.images[0] %>" alt="image" style="width: 50px; height: 50px; filter: saturate(0);">
                                                    <%}%>
                                                    <p class="pl-3 mx-auto" id="order_name_<%= product.productId._id %>" style="margin-top: auto; margin-bottom: auto;"><%=product.productId.name%></p>
                                                    <% if(product.status!='cancelled'){ %>
                                                        <p class="text-right mr-3" style="color: #ff8f67; margin-top: auto; margin-bottom: auto;"><strong style="color: #000000;">Status:</strong> <%= product.status %></p>
                                                    <%}else{%>
                                                        <p class="text-right mr-3" style="color: red; margin-top: auto; margin-bottom: auto;"><strong style="color: #000000;">Status:</strong> <%= product.status %></p>
                                                    <%}%>
                                                    <% if(product.status!='cancelled' && product.status!='delivered' && product.status!='pending'){ %>
                                                        <div class="mt-1 mr-3" style="height: 50%; width: 10%;">
                                                            <button onclick="remove('<%= product.productId.name %>','<%= product._id %>')" style="width: 5em; font-size: small; border-radius: 10px; border: 1px solid #eea287; background-color: white;">Cancell</button>
                                                        </div>
                                                    <% } %>
                                                    <% if(product.status=='delivered'){ %>
                                                        <div class="mt-1 mr-3" style="height: 50%; width: 10%;">
                                                            <button style="width: 5em; font-size: small; border-radius: 10px; border: 1px solid #eea287; background-color: white;" data-toggle="modal" data-target="#returnModal<%= product._id %>">Return</button>
                                                        </div>
                                                    <% } %>
                                                    <script>
                                                        document.addEventListener('DOMContentLoaded', () => {
                                                            const nameElement = document.getElementById('order_name_<%= product.productId._id %>');
                                                            let name = nameElement.innerHTML;
                                                            if (name.length > 15) {
                                                                nameElement.innerHTML = name.slice(0, 15) + '...';
                                                            }
                                                        });
                                                    </script>
                                                </div>

                                                <!-- return -->
                                                <div class="modal fade" id="returnModal<%= product._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content p-4" style="border-radius: 20px;">
                                                            <div class="modal-header">
                                                                <h4 class="modal-title" id="exampleModalLongTitle">Return</h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body pl-3 pr-3">
                                                                <form id="returnForm" action="/returnProduct" method="post">
                                                                    <p class="text-danger" aria-live="polite" id="forgot_error"><%= locals.forgot %></p>
                                                                    <div class="form-group p-4">
                                                                        
                                                                        <label for="wallet_amount">Enter the reason for returning <strong style="color: black;"><%= product.productId.name %></strong>*</label>
                                                                        <input type="text" name="_id" value="<%= product._id %>" hidden>
                                                                        <input type="text" name="productId" value="<%= product.productId._id %>" hidden>
                                                                        <input type="text" class="form-control" id="return_reason" name="reason" style="border-radius: 10px;" autocomplete="off">
                                                                        <span id="return_reason_error" class="error-message" style="color: red; font-size: smaller;"></span>
                                            
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer mx-auto">
                                                                    <button type="button" class="btn btn-outline-primary-2" id="wallet_withdraw_close" data-dismiss="modal" style="border-radius: 10px; height: 2.9em;">
                                                                        <span>Close</span>
                                                                    </button>
                                                                    <button type="submit" style="border-radius: 10px;" class="btn btn-primary">Submit</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            <%})%>
                                            
                                            <div class="d-flex justify-content-between align-items-center">
                                                <p class="mb-0"><strong style="color: #000000;">Ordered Date: </strong><%= order.purchasedDate %></p>
                                                <div class="ms-auto d-flex">
                                                    <% if(order.paymentStatus==true){ %>
                                                        <button onclick="window.location.href='/Invoice?Id=<%= order._id %>'" style="width: 5em; font-size: small; border-radius: 10px; border: 1px solid #eea287; background-color: #000000;color: #ffd900; margin-right: 1em;">Invoice</button>
                                                    <% }else if(order.paymentStatus==false&&order.paymentMethod != 'cash'){ %>
                                                        <button onclick="retryOrder('<%= order.orderId %>','<%= order.subTotal %>')" style="width: 5em; font-size: small; border-radius: 10px; border: 1px solid #eea287; background-color: #ff8585;color: #b50000; margin-right: 1em;">Retry</button>
                                                    <% } %>
                                                    <button class="btn btn-primary ms-2" style="border-radius: 10px;" data-toggle="modal" data-target="#modal-<%= index %>">View</button>
                                                </div>
                                            </div>                                                                                        

                                            <!-- view details  -->
                                            <div class="modal fade" id="modal-<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                  <div class="modal-content p-4" style="border-radius: 20px;">
                                                    <div class="modal-header">
                                                      <h3 class="modal-title" id="exampleModalLongTitle" style="color: #000;">Order Details</h3>
                                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                      </button>
                                                    </div>
                                                    <div class="modal-body pl-3 pr-3">
                                                      <p class="mb-3"><strong style="color: black;">Order Id: </strong><%= order.orderId %> </p>
                                                      <% order.orderedProducts.forEach(product => { %>
                                                        <div class="row">
                                                          <img class="mb-2" src="/productImages/<%= product.productId.images[0] %>" alt="no image" style="width: 50px; height: 50px; border-radius: 5px; border: 1px solid black;">
                                                          <div class="d-block ml-3">
                                                            <p><strong style="color: black;">Name: </strong><%= product.productId.name %> <br>
                                                              <strong style="color: black;">Price: </strong><%= product.productId.price %>
                                                              <div class="d-flex">

                                                                <strong style="color: black;">Quantity: </strong><%= product.quantity %> 
                                                                <strong class="ml-4" style="color: #000;">Status: </strong>
                                                                <% if(product.status=='cancelled'){ %>
                                                                    <p style="color: #e70000;"><%= product.status %></p>
                                                                <% }else{ %>
                                                                    <p style="color: #eea287;"><%= product.status %></p>
                                                                <% } %>

                                                              </div>
                                                            </p>
                                                          </div>
                                                        </div>
                                                      <% }) %>
                                                      <h4 class="mt-3" style="color: #000;">Address</h4>
                                                      <p><strong style="color: #000;">First name: </strong><%= order.shipAddress[0].first_name %> <strong style="color: #000;">Last name: </strong><%= order.shipAddress[0].last_name %> <br>
                                                        <strong style="color: #000;">Country: </strong><%= order.shipAddress[0].contry %> <strong style="color: #000;">Street name: </strong><%= order.shipAddress[0].street_name %> <br>
                                                        <strong style="color: #000;">Town: </strong><%= order.shipAddress[0].town %> <strong style="color: #000;">State: </strong><%= order.shipAddress[0].state %> <br>
                                                        <strong style="color: #000;">Postcode: </strong><%= order.shipAddress[0].postcode %> <strong style="color: #000;">Phone number: </strong><%= order.shipAddress[0].phone_number %> <br>
                                                        <strong style="color: #000;">Email: </strong><%= order.shipAddress[0].email %> 
                                                      </p>
                                                      <p class="mt-4"><strong style="color: #000;">Order Date: </strong><%= order.purchasedDate %></p>
                                                      <p ><strong style="color: #000;">Payment Status: </strong><%= order.paymentStatus? 'Paid': 'Pending' %></p>
                                                    </div>
                                                    <div class="modal-footer mx-auto">
                                                      <button type="button" class="btn btn-primary" data-dismiss="modal" style="border-radius: 10px;">
                                                        <span>Close</span>
                                                      </button>
                                                    </div>
                                                  </div>
                                                </div>
                                              </div>

                                            </div>
                                        <%})%>
                                    <%}else{%>
                                        <p>No order has been made yet.</p>
                                    <%}%>
                                    <a href="/shop" class="btn btn-outline-primary-2" style="border-radius: 10px;"><span>GO SHOP</span><i class="icon-long-arrow-right"></i></a>
                                    
                                </div><!-- .End .tab-pane -->

                                <div class="tab-pane fade" id="tab-downloads" role="tabpanel" aria-labelledby="tab-downloads-link">

                                    <% if(wallet) { %>
                                        <div class="col-lg-6" >
                                            <div class="card card-dashboard shadow-lg" style="border-radius: 20px; border: 1px solid #eea287;">
                                                <div class="card-body">
                                                    <div class="d-flex ">
                                                        <strong style="color: #000000; font-size: medium;">Balance: ₹</strong><p style="color: #00b530; font-size: medium;" id="wallet_balance"><%= wallet.balance %></p>
                                                    </div>
                                                    <div class="d-flex">
                                                        <a href="/addWallet" class="btn btn-outline-primary-2 mx-auto" style="border-radius: 10px;" data-toggle="modal" data-target="#WalletWithDraw">
                                                            <span>Withdraw</span>
                                                            <i class="icon-long-arrow-right"></i>
                                                        </a>
                                                        <a href="/addWallet" class="btn btn-outline-primary-2 mx-auto" style="border-radius: 10px;" data-toggle="modal" data-target="#WalletHistory">
                                                            <span>View history</span>
                                                        </a>
                                                    </div>
                                                </div><!-- End .card-body -->
                                            </div><!-- End .card-dashboard -->
                                        </div><!-- End .col-lg-6 -->
                                    <% } else { %>
                                        <p>No Wallet data available yet.</p>
                                    <% } %>
                                    <a href="/addWallet" class="btn btn-outline-primary-2 ml-3" style="border-radius: 10px;" data-toggle="modal" data-target="#WalletDeposit">
                                        <span>Add amount</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </a>

                                    <!-- deposit -->
                                    <div class="modal fade" id="WalletDeposit" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content p-4" style="border-radius: 20px;">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="exampleModalLongTitle">Deposit Money</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body pl-3 pr-3">
                                                    <form id="walletForm" action="/returnProduct" method="post">
                                                        <p class="text-danger" aria-live="polite" id="forgot_error"><%= locals.forgot %></p>
                                                        <div class="form-group p-4">
                                                            <label for="wallet_amount">Enter amount *</label>
                                                            <input type="text" class="form-control" id="wallet_amount" name="amount" style="border-radius: 10px;" autocomplete="off">
                                                            <span id="wallet_amount_error" class="error-message" style="color: red; font-size: smaller;"></span>
                                
                                                            <label for="paymentMethod" class="mt-3">Select payment method *</label>
                                                            <select class="p-2" style="border-radius: 10px;" name="paymentMethod" id="paymentMethod">
                                                                <option value="Google pay">Google pay</option>
                                                                <option value="Phone pay">Phone pay</option>
                                                                <option value="Paytm">Paytm</option>
                                                            </select>
                                                            <span id="paymentMethod_error" class="error-message" style="color: red; font-size: smaller;"></span>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer mx-auto">
                                                        <button type="button" class="btn btn-outline-primary-2" id="wallet_close" data-dismiss="modal" style="border-radius: 10px; height: 2.9em;">
                                                            <span>Close</span>
                                                        </button>
                                                        <button type="submit" style="border-radius: 10px;" class="btn btn-primary">Deposit</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- withdraw -->
                                    <div class="modal fade" id="WalletWithDraw" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content p-4" style="border-radius: 20px;">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="exampleModalLongTitle">Withdraw Money</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body pl-3 pr-3">
                                                    <form id="walletWithdrawForm" action="" method="post">
                                                        <p class="text-danger" aria-live="polite" id="forgot_error"><%= locals.forgot %></p>
                                                        <div class="form-group p-4">
                                                            <label for="wallet_amount">Enter amount *</label>
                                                            <input type="text" class="form-control" id="wallet_withdraw_amount" name="amount" style="border-radius: 10px;" autocomplete="off">
                                                            <span id="wallet_amount_withdraw_error" class="error-message" style="color: red; font-size: smaller;"></span>
                                
                                                            <label for="paymentMethod" class="mt-3">Select payment method *</label>
                                                            <select class="p-2" style="border-radius: 10px;" name="paymentMethod" id="paymentMethod_withdraw">
                                                                <option value="Google pay">Google pay</option>
                                                                <option value="Phone pay">Phone pay</option>
                                                                <option value="Paytm">Paytm</option>
                                                            </select>
                                                            <span id="paymentMethod_error" class="error-message" style="color: red; font-size: smaller;"></span>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer mx-auto">
                                                        <button type="button" class="btn btn-outline-primary-2" id="wallet_withdraw_close" data-dismiss="modal" style="border-radius: 10px; height: 2.9em;">
                                                            <span>Close</span>
                                                        </button>
                                                        <button type="submit" style="border-radius: 10px;" class="btn btn-primary">Withdraw</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- history -->
                                    <div class="modal fade" id="WalletHistory" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content p-4" style="border-radius: 20px;">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="exampleModalLongTitle">Withdraw Money</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body pl-3 pr-3">
                                                    
                                                    <p class="text-danger" aria-live="polite" id="forgot_error"><%= locals.forgot %></p>
                                                    <div class="form-group p-4">
                                                        <div style="max-height: 300px; overflow-y: auto;">
                                                            <table class="table">
                                                                <thead>
                                                                  <tr>
                                                                    <th scope="col">No.</th>
                                                                    <th scope="col">Amount</th>
                                                                    <th scope="col">Date</th>
                                                                    <th scope="col">payment Method</th>
                                                                    <th scope="col">status</th>
                                                                  </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% if(transactionHistory && transactionHistory.length > 0) { %>
                                                                        <% let history = transactionHistory.reverse() %>
                                                                        <% history.forEach((val, index) => { %>
                                                                            <tr>
                                                                                <td><%= ++index %></td>
                                                                                <td>₹<%= val.amount %></td>
                                                                                <td><%= val.date %></td>
                                                                                <td><%= val.paymentMethod%></td>
                                                                                <% if(val.status=='debit') {%>
                                                                                    <td class="text-danger"><%= val.status %></td>
                                                                                <% }else{ %>
                                                                                    <td class="text-success"><%= val.status %></td>
                                                                                <% } %>
                                                                            </tr>
                                                                        <% }) %>
                                                                    <% } else { %>  

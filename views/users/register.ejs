<script>

form.addEventListener('submit', function(event) {
    let usernameInput = document.getElementById('noNumberSpaceInput').value.trim();
    let emailInput = document.getElementById('email').value.trim();
    let phoneInput = document.getElementById('phone_number').value.trim();
    let passwordInput = document.getElementById('password_input').value.trim();
    let confirmPasswordInput = document.getElementById('re_password_input').value.trim();

    let usernameError = document.getElementById('noNumberSpaceError');
    if (usernameInput === '') {
        usernameError.textContent = 'Please enter a username.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else {
        usernameError.textContent = '';
    }

    let emailError = document.getElementById('emailError');
    if (emailInput === '') {
        emailError.textContent = 'Please enter an email address.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else {
        emailError.textContent = '';
    }

    let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(emailInput)) {
        emailError.textContent = 'Please enter a valid email address.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else {
        emailError.textContent = '';
    }

    let phoneError = document.getElementById('phone_number_error');
    if (phoneInput === '') {
        phoneError.textContent = 'Please enter a phone number.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else if (!/^\d{10}$/.test(phoneInput)) { // Ensure exactly 10 digits
        phoneError.textContent = 'Please enter a valid 10-digit phone number.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else {
        phoneError.textContent = '';
    }

    let passwordError = document.getElementById('password_error');
    if (passwordInput === '') {
        passwordError.textContent = 'Please enter a password.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else if (passwordInput.length < 8) {
        passwordError.textContent = 'Password must be at least 8 characters long.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else {
        passwordError.textContent = '';
    }

    let confirmPasswordError = document.getElementById('re_password_error');
    if (confirmPasswordInput === '') {
        confirmPasswordError.textContent = 'Please confirm your password.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else if (confirmPasswordInput !== passwordInput) {
        confirmPasswordError.textContent = 'Passwords do not match.';
        event.preventDefault(); // Prevent form submission if validation fails
        return;
    } else {
        confirmPasswordError.textContent = '';
    }
});




</script>
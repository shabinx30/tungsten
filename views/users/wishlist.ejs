<script>
    function addToCart(productId){
        const quantity = 1
        fetch('/addCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId, quantity,size: 'medium' })
        })
        .then(response => response.json())
        .then(data=>{
            if(data.success){
                Swal.fire({
                    icon : 'success',
                    title : 'Success',
                    text : 'Product added successfully',
                    showConfirmButton  :false,
                    timer : 1500
                })

                fetch('/removeProductFromWishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId })
            })
            .then((response) => {
                if (!response.ok) {
                    throw new Error("Network response was not ok");
                }
                return response.json();
            })
            .then((data) => {
                console.log("Response is working:");
                if (data.success) {
                    window.location.reload();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: data.error || "Can't remove the product.",
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            })
            .catch((error) => {
                console.error("There was a problem with the fetch operation:", error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: "There was a problem with the fetch operation.",
                    showConfirmButton: false,
                    timer: 1500
                });
            });

            }else{
                Swal.fire({
                    icon: 'error',
                    title: "Can't add to cart!",
                    text: data.error || 'Product is already existing.',
                    showConfirmButton: false,
                    timer: 1500
                });
            }
        })
    }
</script>
